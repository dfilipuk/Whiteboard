{
	"name": "Whiteboard Client",
	"image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:16",
	"workspaceFolder": "/dev-client",
	"postCreateCommand": "cd source && npm i",
	"mounts": [
		"source=${localWorkspaceFolder},target=/dev-client,type=bind,consistency=cached"
	],
	"containerEnv": {
		"FAST_REFRESH": "true",
		"CHOKIDAR_USEPOLLING": "true"
	},
	"extensions": [
		"ms-vscode.vscode-typescript-tslint-plugin"
	],
}